    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "[Windows] Analyse secure_sum repo",
            "cargo": {
                "args": [
                    "build",
                    "--bin=secure_sum",
                    "--package=secure_sum"
                ],
                "filter": {
                    "name": "secure_sum",
                    "kind": "bin"
                }
            },
            "args": [
                "./system_tests/example_metrics.toml",
                "https://github.com/aunovis/secure_sum"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}